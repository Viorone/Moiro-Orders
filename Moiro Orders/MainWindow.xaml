<Window
        x:Class="Moiro_Orders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Moiro_Orders"
        xmlns:ViewModel="clr-namespace:Moiro_Orders.ViewModel"  
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ViewModel:OrderViewModel x:Key="ViewModelOrder"/>
        <ViewModel:UserViewModel x:Key="UserModel"/>
    </Window.Resources>
    <Grid>
        <Grid DataContext="{StaticResource ViewModelOrder }">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

            </Grid.RowDefinitions>

            <Grid
                Grid.Column="2">
                <Frame x:Name="frameOrder"/>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Button Background="Transparent"  Margin="5"
                    BorderThickness="0"
                    Click="Menu_Click" Grid.Row="0">
                    <Grid>
                        <Image Source="Resources/menu.png"/>
                    </Grid>
                </Button>
                <Button Background="Transparent"  
                        Margin="5"
                        x:Name="Orders"
                        BorderThickness="0"
                        Grid.Row="1"

                        Click="AddOrder_Click">

                    <Grid>
                        <Image Source="Resources/orders.png"/>
                    </Grid>
                </Button>
                <Button Background="Transparent"
                        BorderThickness="0"
                        Margin="5"
                        Grid.Row="2">
                    <Grid>
                        <Image Source="Resources/events.png"/>
                    </Grid>
                </Button>
                <Button Background="Transparent"
                        BorderThickness="0"
                        Margin="5"
                        Grid.Row="3"
                        x:Name="Users"
                        Click="Users_Click">
                    <Grid>
                        <Image Source="Resources/sharp.png"/>
                    </Grid>
                </Button>

            </Grid>
        </Grid>

    </Grid>
</Window>
