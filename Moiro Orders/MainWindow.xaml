<Window x:Class="Moiro_Orders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moiro_Orders"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="683*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0">
            <Button Name="Send" VerticalAlignment="Top"  
                HorizontalAlignment="Left" 
                Margin="5"
                Click="Send_Click">
                <Label Content="Отправить 1"/>
            </Button>
            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="Button_Click">
                <Label Content="Отправить 2"/>
            </Button>
            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="Chat_Click">
                <Label Content="Чат"/>
            </Button>
            <Button Content="atsk"
                    Name="MVVM"
                    Click="MVVM_Click">
                
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="text1"  FontSize="18" Text="{Binding Path=SynchronizedText, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}"/>
            <TextBlock FontSize="18" Text="{Binding Path=SynchronizedText, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
            <ListBox Grid.Column="0" ItemsSource="{Binding Order}"
                 SelectedItem="{Binding SelectedOrder}"
                     x:Name="listOut">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <!-- Change for real metods -->
                            <TextBlock FontSize="18" Text="{Binding Path=Problem}" />
                            <TextBlock Text="{Binding Path=Description}" />
                            <TextBlock Text="{Binding Path=Date}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <Grid Grid.Row="1">
            <StackPanel x:Name="stackMessage"/>
        </Grid>
    </Grid>
</Window>
