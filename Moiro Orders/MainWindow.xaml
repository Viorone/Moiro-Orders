<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moiro_Orders"
        xmlns:ViewModel="clr-namespace:Moiro_Orders.ViewModel" x:Class="Moiro_Orders.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="683*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0">
            <Button x:Name="Send" VerticalAlignment="Top"  
                HorizontalAlignment="Left" 
                Margin="5"
                Click="Send_Click">
                <Label Content="События"/>
            </Button>
            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="Button_Click">
                <Label Content="Заявки"/>
            </Button>
            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="Chat_Click">
                <Label Content="Чат"/>
            </Button>
            <Button Content="atsk"
                    x:Name="MVVM"
                    Click="MVVM_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <DataGrid x:Name="dgToList" FontSize="16" Margin="10">
                <DataGrid.Columns></DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Grid Grid.Row="1">
            <StackPanel x:Name="stackMessage"/>
        </Grid>
    </Grid>
</Window>
