<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moiro_Orders"
        xmlns:ViewModel="clr-namespace:Moiro_Orders.ViewModel" x:Class="Moiro_Orders.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="683*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0">
            <Button x:Name="Send" VerticalAlignment="Top"  
                HorizontalAlignment="Left" 
                Margin="5"
                Click="Send_Click">
                <Label Content="Отправить 1"/>
            </Button>
            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="Button_Click">
                <Label Content="Отправить 2"/>
            </Button>
            <Button VerticalAlignment="Top" 
                    HorizontalAlignment="Left"
                    Margin="5"
                    Click="Chat_Click">
                <Label Content="Чат"/>
            </Button>
            <Button Content="atsk"
                    x:Name="MVVM"
                    Click="MVVM_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox x:Name="text1"  FontSize="18" Text="{Binding SynchronizedText, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock FontSize="18" Text="{Binding SynchronizedText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
            <ListBox Grid.Column="0" ItemsSource="{Binding Orders}"
                     x:Name="listOut" Height="318">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock FontSize="18" Text="{Binding Problem}" />
                            <TextBlock Text="{Binding Description}" />
                            <TextBlock Text="{Binding Date}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.DataContext>
                    <ViewModel:OrderViewModel/>
                </ListBox.DataContext>
            </ListBox>
        </StackPanel>
        <Grid Grid.Row="1">
            <StackPanel x:Name="stackMessage"/>
        </Grid>
    </Grid>
</Window>
