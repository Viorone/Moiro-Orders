<Window
        x:Class="Moiro_Orders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Moiro_Orders"
        xmlns:ViewModel="clr-namespace:Moiro_Orders.ViewModel"  
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ViewModel:OrderViewModel x:Key="ViewModelOrder"/>
        <ViewModel:UserViewModel x:Key="UserModel"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModelOrder }">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="682*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition Height="auto" MinHeight="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button 
            Content="Button" 
          
            Command="{Binding CommandGetOrdersOfDate}" Grid.Row="2" Grid.Column="1" />
        <Button 
            Content="Все заявки" 
            Grid.Row="1" 
      
            Command="{Binding CommandGetAllOrders}" Grid.Column="1" />
        <Button 
            x:Name="addOrder"
            Click="AddOrder_Click" Grid.Column="1" >
            <Button.Content>
                <TextBlock Text="Добавить заявку на сегодня"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </Button.Content>
        </Button>
        <DataGrid ItemsSource="{Binding Orders}" Margin="10" Grid.Column="2" Grid.RowSpan="4"/>

    </Grid>
</Window>
